<div class="row clearfix">
	<% if task.completed? %>
		<div class="complete">
			<!--creates the link for marking tasks complete-->
			<%= link_to complete_project_task_path(@project, task.id), method: :patch do %>
				<!-- brings in checkmark from font awesome with opacity -->
				<i style="opacity: 0.4;" class="fa fa-check"></i>
			<% end %>
		</div>
		<div class="todo_item"> 
			<p style="opacity: 0.4;"><strike><%= task.content %></strike></p>
		</div>
		<div class="trash">
			<!--creates link to delete tasks created, targets project by task id, creates popup confirmation-->
			<%=link_to project_task_path(@project, task.id), method: :delete,data: {confirm: "Are you sure?"} do %>
				<i class="fa fa-trash"></i>
			<% end %>
		</div>

	<% else %>
		<div class="complete">
			<%= link_to complete_project_task_path(@project, task.id), method: :patch do %>
				<!-- brings in checkmark from font awesome without opacity -->
				<i class="fa fa-check"></i>
			<% end %>
		</div>
		<div class="todo_item"> 
			<p><%= task.content %></p>
		</div>
		<div class="trash">
			<%=link_to project_task_path(@project, task.id), method: :delete,data: {confirm: "Are you sure?"} do %>
				<i class="fa fa-trash"></i>
			<% end %>
		</div>

	<% end %>
</div>